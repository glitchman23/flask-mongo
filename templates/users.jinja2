{% extends 'basic.jinja2' %}

{% block body %}
<div class="row jumbotron jumbotron-fluid mt-5 px-5">
  <div class="container">
    <h1 class="display-4">Usu√°rios</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Linguagem</th>
            <th>Cor</th>
            <th>Idade</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
          <tr>
            <td>{{ user['name'] }}</td>
            <td>{{ user['language'] }}</td>
            <td>{{ user['color'] }}</td>
            <td>{{ user['age'] }}</td>
            <td>
              <a class="btn btn-danger btn-sm">
                <i class="fa fa-trash text-white" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>

  </div>
</div>

<div class="row">
  <div class="col-md-7 offset-md-2">
    <form action="{{ url_for('add_user') }}" method="post">
      <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" id="nome" name ="name" class="form-control" />
      </div>
      <div class="form-group">
        <label for="linguagem">Linguagem preferia</label>
        <input type="text" id="linguagem" name ="language" class="form-control" />
      </div>
      <div class="form-group">
        <label for="cor">Cor que mais gosta</label>
        <input type="text" id="cor" name="color" class="form-control" />
      </div>
      <div class="form-group">
        <label for="idade">Idade</label>
        <input type="text" id="idade" name="age" class="form-control" />
      </div>
      <button type="submit" class="btn btn-block btn-primary">Cadastrar</button>
    </form>         
  </div>
</div>
{% endblock %}